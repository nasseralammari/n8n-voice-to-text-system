# N8N Voice-to-Text System Environment Configuration
# This file contains all the environment variables used by the application
# Copy this file to .env and update with your own values

# N8N Configuration
N8N_HOST=http://localhost
N8N_PORT=5678
N8N_API_KEY=your-n8n-api-key-here
N8N_ENCRYPTION_KEY=your-encryption-key-here

# Voice-to-Text Service Configuration
VOICE_TO_TEXT_SERVICE=google
VOICE_TO_TEXT_API_KEY=your-api-key-here
VOICE_TO_TEXT_LANGUAGE=en-US
VOICE_TO_TEXT_SAMPLE_RATE=16000

# Google Cloud Speech-to-Text (if using Google service)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/credentials.json

# Azure Speech-to-Text (if using Azure service)
AZURE_SPEECH_KEY=your-azure-key
AZURE_SPEECH_REGION=eastus

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/n8n_voice
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/n8n-voice/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0
SERVER_WORKERS=4

# Security Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=24h
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5678

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=/tmp/uploads
ALLOWED_FILE_TYPES=wav,mp3,ogg,flac,m4a

# Audio Processing Configuration
AUDIO_BUFFER_SIZE=4096
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Email Configuration (Optional)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#notifications

# Debug Mode
DEBUG=false
DEBUG_SQL=false

# Environment
NODE_ENV=development

# Workers
WORKER_PROCESSES=4
WORKER_TIMEOUT=30000
